.conference-list-box
    width: 100%
    height: 100%
    background-color: #f3f3f3
    overflow-y: scroll;
    overflow-x: hidden
    -webkit-overflow-scrolling: touch;
    .list-main
        width: 100%
        background-color: #f3f3f3
        .list-container
            width: 100%
            padding: 20px 0;
            a
                display: block;
                .list-item
                    margin-bottom: 20px;
                    background-color: #ffffff
                    padding: 0 40px;
                    .list-item-title
                        position relative
                        height 100px
                        line-height 100px
                        width 100%
                        .title
                            font-size 32px
                            color #344559
                            width 490px
                            text-overflow: ellipsis;
                            white-space: nowrap;
                            word-wrap:break-word;
                            overflow:hidden;
                            display inline-block
                        .price
                            color: #fb699d
                            font-size 30px
                            position absolute
                            right 0
                    .list-item-img
                        position: relative
                        padding-top 48px
                        .list-item-flag
                            position: absolute
                            right: 34px;
                            top: 48px
                            width: 50px
                            height: 120px
                            padding-left: 12px;
                            color: #ffffff
                            font-size: 26px;
                            span
                                position: absolute
                        .flag1
                            background-color #36bac9
                        .flag1:before
                            background-color #36bac9
                        .flag2
                            background-color #c0c6d0
                        .flag2:before
                            background-color #c0c6d0
                        .flag3
                            background-color #fb699d
                        .flag3:before
                            background-color #fb699d
                        .list-item-flag:before
                            content: " "
                            width: 50px
                            height: 50px
                            border-radius: 50%
                            display: inherit;
                            position: absolute;
                            left: 0;
                            bottom: -25px;
                        .item-img
                            width: 100%
                            height: 340px
                            overflow: hidden
                            img
                                width: 100%
                                max-height: 100%
                    .list-item-bottom
                        font-size: 26px;
                        line-height 50px
                        color: #919dae
                        display: -webkit-box;
                        display: -webkit-flex;
                        display: -ms-flexbox;
                        display: flex;
                        -webkit-box-pack: space-between;
                        -webkit-justify-content: space-between;
                        justify-content: space-between
                        padding-bottom 30px
                        .time img
                            width:34px;
                            height: 34px
                            margin-bottom: 8px
                            margin-right: 23px
                        .address img
                            width:36px;
                            height: 36px
                            margin-bottom: 8px
                            margin-right: 23px


