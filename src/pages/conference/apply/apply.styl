.conference-apply-box
    width: 100%
    height: 100%
    .apply-main
        width: 100%
        height: 100%;
        padding-top: 20px
        background-color: #f3f3f3
        .apply-prod-cont
            width: 100%
            padding: 40px
            padding-right: 0px
            background-color: #ffffff
            .apply-head
                width: 100%
                padding-bottom: 40px
                display: -webkit-box;
                display: -webkit-flex;
                display: -ms-flexbox;
                display: flex;
                -webkit-box-pack: space-between;
                -webkit-justify-content: space-between;
                justify-content: space-between
                .apply-head-time
                    font-size: 24px
                    color: #919dae
                .apply-head-ticket
                    font-size: 24px
                    color: #36bac9
                    padding-right: 40px
            .apply-prod
                width: 100%
                padding: 40px 0;
                border-top: 0.0275rem solid #dbdbdb
                border-bottom: 0.0275rem solid #dbdbdb
                position: relative;
                .apply-prod-img
                    width: 220px
                    height: 160px
                    float: left
                    margin-right: 30px
                p
                    width: 420px
                    min-height: 90px
                    margin-bottom: 20px
                    float: left
                    display -webkit-box
                    -webkit-box-orient vertical
                    overflow hidden
                    text-overflow ellipsis
                    -webkit-line-clamp 3
                    word-wrap:break-word; 
                    word-break:normal;
                .apply-prod-num
                    float: left
                    width: 420px
                    height: 50px
                    line-height: 50px
                    bottom: 0;
                    right: 0;
                    display: -webkit-box;
                    display: -webkit-flex;
                    display: -ms-flexbox;
                    display: flex;
                    -webkit-box-pack: space-between;
                    -webkit-justify-content: space-between;
                    justify-content: space-between
                    .apply-prod-money
                        font-size: 24px
                        color: #919dae
                        display: inline-block
                        float: left
                    .apply-prod-num-modify
                        display: inline-block
                        float: right
                        img
                            width: 50px
                            height: 50px
                        span
                            font-size: 24px
                            color: #344559
                            padding: 10px 0
                            width: 60px
                            display: inline-block
                            text-align: center
            .apply-prod:after
                content:".";        
                display:block;        
                height:0;        
                clear:both;        
                visibility:hidden; 
            .apply-price
                width: 100%
                text-align: right
                display: inline-block
                padding-top: 40px
                padding-right: 40px
                font-size: 24px
                color: #919dae
                .apply-price-money
                    color: #36bac9
        .apply-prod-cont:after
            content:".";        
            display:block;        
            height:0;        
            clear:both;        
            visibility:hidden; 
        .apply-cont
            margin-top: 20px;
            padding-bottom: 42px;
            padding-left: 40px;
            background-color: #ffffff;
            .apply-form-title
                font-size: 32px
                color: #919dae;
                padding: 42px 0;
            .apply-form-cont
                border-top: 0.0275rem solid #dbdbdb
                .apply-form-item
                    font-size: 30px;
                    position: relative;
                    .require-flag
                        width: 10px
                        display: inline-block;
                        color: #fb699d
                        margin-right: 5px;
                    .apply-form-label
                        color: #344559
                        margin-right: 60px;
                    .apply-form-value
                        padding: 30px 0;
                        color: #4e5e75
                        border: none;
                        padding-left: 20px
                        border-bottom: 0.0275rem solid #dbdbdb;
                        width: 530px;
        .apply-tip
            font-size: 24px;
            color: #c0c6d0
            text-align: center
            padding: 33px 0;
        .apply-submit
            position: fixed;
            bottom: 0;
            width: 100%
            height: 100px;
            background-color: #2bb0bd
            color: #ffffff
            font-size: 30px
            text-align: center
            line-height: 100px;
            cursor: pointer
        .disable-submit
            background-color: #919dae
            cursor: none

