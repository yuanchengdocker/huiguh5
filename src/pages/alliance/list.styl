.alliance-list-box
  background-color #f3f3f3
  display block
  ul
    padding-bottom 70px
    li
      background-color #fff
      width 100%
      margin-top 20px
      padding 45px 40px 47px 40px
      .list-tit
        color #344559
        font-size 34px
        overflow:hidden; 
        text-overflow:ellipsis;
        display:-webkit-box; 
        -webkit-box-orient:vertical;
        -webkit-line-clamp:1;
        word-wrap:break-word; 
        word-break:normal; 
      img
        width 100%
        height 270px
        margin-top 32px
        margin-bottom 27px
      .list-con
        color #919dae
        font-size 30px
        line-height 40px
        overflow:hidden; 
        text-overflow:ellipsis;
        display:-webkit-box; 
        -webkit-box-orient:vertical;
        -webkit-line-clamp:2; 
        word-wrap:break-word; 
        word-break:normal;
    li:first-child
      margin-top 0
      
