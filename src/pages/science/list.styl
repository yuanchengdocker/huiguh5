html,body
  background-color #f3f3f3
  .science-list
    width 100%
    height 1044px
    padding 20px 0
    overflow-y: scroll;
    -webkit-overflow-y: scroll;
    overflow-x: hidden;
    -webkit-overflow-x: hidden;
    -webkit-overflow-scrolling: touch;
    -moz-user-select: none;
    -webkit-user-select: none;
    -ms-user-select: none;
    -khtml-user-select: none;
    user-select: none;
    -webkit-tap-highlight-color: rgba(0,0,0,0);
    ul
      background-color #fff
      width 100%
      display: block;
      .list-cont
        border-bottom 0.0267rem solid #dbdbdb
        padding 40px 37.5px
        width 100%
        position relative
        .list-date
          position absolute
          left 40px
          top 40px
          width 110px
          height 110px
          border 0.0267rem solid #c0c6d0
          text-align center
          color #919dae
          .date-day
            font-size 48px
            margin-top 5px
          .date-year
            font-size 20px
        .list-main
          margin-left 150px
          width 525px
          .list-tit
            font-size 32px
            width 525px
            color #344559
            overflow:hidden; 
            text-overflow:ellipsis;
            display:-webkit-box; 
            -webkit-box-orient:vertical;
            -webkit-line-clamp:1; 
            word-wrap:break-word; 
            word-break:normal;
          .list-artor
            font-size 28px
            width 525px
            color #919dae
            margin 22px 0 29px 0
            overflow:hidden; 
            text-overflow:ellipsis;
            display:-webkit-box; 
            -webkit-box-orient:vertical;
            -webkit-line-clamp:1; 
            word-wrap:break-word; 
            word-break:normal;
          .list-content
            font-size 30px
            width 525px
            color #919dae
            overflow:hidden; 
            text-overflow:ellipsis;
            display:-webkit-box; 
            -webkit-box-orient:vertical;
            -webkit-line-clamp:2; 
            word-wrap:break-word; 
            word-break:normal;
    .flup-empty
      margin 30% auto
      text-align center
      display none
      .emptyImg
        width 57px
        height 59px
        margin 0 auto 28px
      p
        font-size 30px
        color #c0c6d0