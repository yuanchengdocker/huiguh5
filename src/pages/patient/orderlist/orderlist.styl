.order-box
  width 100%
  height 100%
  background-color #f3f3f3
  overflow-y: scroll;
  overflow-x: hidden;
  -webkit-overflow-scrolling: touch;
  .order-main
    width: 100%
    background-color: #f3f3f3
    ul
      width: 100%
      padding: 20px 0; 
      .order-list
        a
          display block
          margin-bottom: 20px;
          background-color: #ffffff
          padding: 0 0 0 40px;
          .order-top
            height 105px
            color #919dae
            font-size 24px
            line-height 105px
            position relative
            .order-time
              position absolute
              right 40px
          .order-bottom
            height 105px
            line-height 105px
            font-size 24px
            color #919dae
            text-align right
            padding-right 40px
            border-top 0.0275rem solid #dbdbdb
            span
              color #36bac9
          .order-cont
            position relative
            padding-bottom 40px
            .order-cont-img
              img
                width 220px
                height 160px
            .order-cont-main
              position absolute
              top 0
              left 250px
              height 160px
              padding-right 40px
              width 65%
              .order-tit
                font-size 30px
                line-height 36px
                color #344559
                display: -webkit-box;
                -webkit-box-orient: vertical;
                overflow: hidden;
                text-overflow: ellipsis;
                -webkit-line-clamp: 2;
              .order-state
                position absolute
                font-size 28px
                color #fb699d
                right 30px
                top 0
              .state-active1
                color #36bac9
              .state-active2
                color #c0c6d0
              .order-count
                position absolute
                bottom 0
                color #919dae
                font-size 24px
                width 100%
                span
                  position absolute
                  right 40px
  #pullUp
    text-align center
    width 100%
