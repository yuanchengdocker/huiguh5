body
  background-color #f3f3f3
.huigu-header
  p
    margin-left 65px
    width 650px
    overflow:hidden; 
    text-overflow:ellipsis;
    display:-webkit-box; 
    -webkit-box-orient:vertical;
    -webkit-line-clamp:1; 
    word-wrap:break-word; 
    word-break:normal;
.patient-list
  width 100%
  padding-top 120px
  background-color #f3f3f3
  .patient-list-main
    padding-bottom 20px
    li
      background-color #fff
      width 100%
      height 140px
      line-height 140px
      font-size 30px
      margin 20px 0
      position relative
      padding 0 30px
      a
        color #344559
        width 100%
        height 100%
        display block
        overflow:hidden; 
        text-overflow:ellipsis;
        display:-webkit-box; 
        -webkit-box-orient:vertical;
        -webkit-line-clamp:1; 
        word-wrap:break-word; 
        word-break:normal;
        i
          width 18px
          height 32px
          position absolute
          right 32px
          top 54px
          display inline-block
          background: url('/build2/img/arrow.png') no-repeat top center
          background-size cover
    li:hover
      box-shadow: 0px 0px 18px rgba(180,180,180,0.35);
      -s-box-shadow: 0px 0px 18px rgba(180,180,180,0.35);
      -ms-box-shadow: 0px 0px 18px rgba(180,180,180,0.35);
      -moz-box-shadow: 0px 0px 18px rgba(180,180,180,0.35);
      -wekit-box-shadow: 0px 0px 18px rgba(180,180,180,0.35);
    li:first-child
      margin-top 0
      

