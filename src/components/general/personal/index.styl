                  word-break:normal;
                .opus-contain-img
                  position absolute
                  top 0
                  right 0
                  width 220px
                  height 160px
                  .containImg
                    width 100%
                    height 100%
                  .meng
                    position absolute
                    top 0
                    right 0
                    width 100%
                    height 100
                    z-index 10
                  .yu
                    position absolute
                    right 0
                    top 0
                    z-index 12
                    height 87px
                    width 87px
              .tab-opus-bottom
                width 100%
                position relative
                .opus-bottom-time
                  font-size 24px
                  color #a2acba
                  i
                    width 30px
                    height 30px
                    background url("/build/img/time.png") no-repeat top center
                    background-size 100% 100%
                    margin-right 10px
                    display inline-block
                    margin-bottom -5px
                .opus-bottom-tit
                  font-size 26px
                  color #919dae
                .opus-bottom-fix
                  position absolute
                  right 0
                  top 0
                  font-size 26px
                  color #a2acba
                .opus-bottom-money
                  position absolute
                  right 0
                  top 0
                  font-size 30px
                  color #36bac9
                .opus-contain-give
                  position absolute
                  right 0
                  top 0
                  font-size 24px
                  color #c0c6d0
                  span
                    margin-left 69px
                    display inline-block
                    i
                      width 28px
                      height 28px
                      background url("/build/img/give.png") no-repeat top center
                      background-size 100% 100%
                      display inline-block
                      margin-right 10px
                  span:first-child
                    margin-left 0px
                    i
                      width 30px
                      height 22px
                      background url("/build/img/read.png") no-repeat top center
                      background-size 100% 100%
        .detail-tab-serve
          width 670px
          display block
          .tab-serve-tap
            margin-top 40px
