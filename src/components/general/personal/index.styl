.personal-detail-box
  width: 100%
  height: auto
  background-color #fff
  .detail-header
    width 100%
    position relative
    margin-bottom 99px
    .detail-header-main
      height 340px
      background-color #36bac9
      color #fff
      top 79px
      position absolute
      width 670px
      left 50%
      margin-left -335px
      z-index 5
      .detail-header-img
        position absolute
        width 140px
        height 140px
        border-radius 50%
        top -64px
        left 50%
        margin-left -70px
        .detail-header-autor
          overflow hidden
          width 140px
          height 140px
          border-radius 50%
          border 5px solid #36bac9
          .detail-autor
            width auto
            height auto
            min-height 100%
            min-width 100%
        .status
          position absolute
          width 31px
          height 31px
        .detail-status1
          right 0px
          bottom 10px
          display block
        .detail-status2
          width 85px
          height 29px
          right -50px
          bottom 13px
          display block
        .detail-status3
          right 0px
          bottom 10px
          display block
      .detail-header-con
        text-align center
        margin-top 100px
        position relative
        font-size 26px
        .detail-tit
          margin-bottom 28px
          display -webkit-box
          -webkit-box-orient vertical
          overflow hidden
          text-overflow ellipsis
          -webkit-line-clamp 1
          word-wrap:break-word; 
          word-break:normal;
          span
            font-size 34px
            margin-right 20px
        .detail-subtitle
          margin 0 auto 40px
          width 90%
          display -webkit-box
          -webkit-box-orient vertical
          overflow hidden
          text-overflow ellipsis
          -webkit-line-clamp 1
          word-wrap:break-word; 
          word-break:normal;
        .detail-tag
          display -webkit-box
          -webkit-box-orient vertical
          overflow hidden
          text-overflow ellipsis
          -webkit-line-clamp 1
          word-wrap:break-word; 
          word-break:normal;
          span
            border 0.0275rem solid #fff
            padding 18px 23px
            margin-right 15px
            border-radius 50px
            display inline-block
            margin-bottom 20px
          span:last-child
            margin-right 0
     .detail-add
        position absolute
        border 0.0275rem solid #fff
        width 120px
        height 40px
        line-height 35px
        font-size 24px
        border-radius 20px
        text-align center
        top 29px
        right 29px
        color #fff
    .detail-header-bg
      height 370px
      width 100%
      overflow hidden
      position relative
      .detail-header-flit
        position absolute
        width 100%
        height 100%
        background-color rgba(0, 0, 0, .5)
        z-index 2
      img
        width 100%
        height auto
        display block
        margin 0 auto
        -webkit-filter blur(5px) /* Chrome, Opera */
        -moz-filter blur(5px)
        -ms-filter blur(5px)  
        filter blur(5px)
  .detail-cont
    width: 100%
    padding: 10px 40px
    background-color: #ffffff
    .detail-tab
      width: 100%
      margin-bottom: 10px
      .detail-tab-container
        width: 100%
        display: -webkit-box;
        display: -webkit-flex;
        display: -ms-flexbox;
        display: flex;
        -webkit-box-pack: space-between;
        -webkit-justify-content: space-between;
        justify-content: space-between
        position: relative
        .detail-tab-item
          float: left
          position relative
          a
            padding: 0 22px 30px;
            margin:0 28px;
            font-size: 30px
            color: #344559
            display: inline-block
            // border-bottom: 5px solid #ffffff
            -webkit-transition: color .3s cubic-bezier(.645,.045,.355,1);
            transition: color .3s cubic-bezier(.645,.045,.355,1);
          a:hover
            color: #36bac9
            border-bottom-color:#36bac9
          .tab-active
            color: #36bac9
            border-bottom-color:#36bac9
          .tab-bar
            display: block;
            transform: translate3d(0px, 0px, 0px);
            width: 80px;
            margin-left:-40px;
            left 50%
            z-index: 1;
            position: absolute;
            bottom: 1px;
            box-sizing: border-box;
            height: 5px;
            display none
            background-color: #36bac9;
            -webkit-transform-origin: 0 0;
            -ms-transform-origin: 0 0;
            transform-origin: 0 0;
            -webkit-transition: width .3s cubic-bezier(.645,.045,.355,1),-webkit-transform .3s cubic-bezier(.645,.045,.355,1);
            transition: width .3s cubic-bezier(.645,.045,.355,1),-webkit-transform .3s cubic-bezier(.645,.045,.355,1); 
            transition: transform .3s cubic-bezier(.645,.045,.355,1),width .3s cubic-bezier(.645,.045,.355,1); 
            transition: transform .3s cubic-bezier(.645,.045,.355,1),width .3s cubic-bezier(.645,.045,.355,1),-webkit-transform .3s cubic-bezier(.645,.045,.355,1);
        .detail-tab-item:first-child
          .tab-bar
            display block
    .detail-tab-cont
      width: 100%
      overflow: hidden;
      padding-bottom: 160px
      min-height: 500px
      .tab-container
        width: 2680px
        display: -webkit-box;
        display: -webkit-flex;
        display: -ms-flexbox;
        display: flex;
        .detail-tab-introduce
          display: block
          width: 670px
          font-size 30px
          line-height 55px
          color #919dae
          margin-top 50px
          text-indent:55px
          word-wrap:break-word; 
          word-break:normal;
          .introduce-headimg
            width: 100%
          .introduce-desc
            font-size: 30px 
            line-height: 36px
            color: #344559
            padding: 30px 0;
            padding-bottom: 27px;
          .detail-tab-con
            width 100%
            p
              text-indent 55px
            p.detail-tab-tit
              font-size 28px
              color #36bac9
              text-indent 0
        .detail-tab-team
          width: 670px
          display: block
          ul
            li
              width 100%
              border-bottom 0.0275rem solid #dbdbdb
              margin-top 33px
              .tab-team-top
                font-size 34px
                color #344559
                margin-bottom 22px
                line-height 72px
                position relative
                overflow:hidden; 
                text-overflow:ellipsis;
                display:-webkit-box; 
                -webkit-box-orient:vertical;
                -webkit-line-clamp:1; 
                word-wrap:break-word; 
                word-break:normal;
                a.team-artor
                  width 72px
                  height 72px
                  border-radius 50%
                  margin-right 26px
                  overflow hidden
                  display inline-block
                  position relative
                  bottom -10px
                  img
                      width auto
                      height 100%
              .tab-team-photo
                  width 100%
                  height 300px
                  position relative
                  overflow hidden
                  div
                    height  115px
                    position absolute
                    bottom 0
                    left 0
                    width 100%
                    background-color rgba(0, 0, 0, .4)
                    p
                      font-size 28px
                      color #fff
                      padding 0 12px
                      margin-top 33px
                      line-height 34px
                      overflow:hidden; 
                      text-overflow:ellipsis;
                      display:-webkit-box; 
                      -webkit-box-orient:vertical;
                      -webkit-line-clamp:2; 
                      word-wrap:break-word; 
                      word-break:normal;
                  img
                    width 100%
                    height auto
              .tab-team-info
                width 100%
                position relative
                clear both
                display block
                height 115px
                div
                  float left
                  display inline-block
                  width 33%
                  height 115px
                  line-height 115px
                  font-size 26px
                  color #919dae
                  text-align center
                  i
                    width 50px
                    height 50px
                    border-radius 50%
                    background url("/build/img/studio_special.png") no-repeat top center
                    background-size 100% 100%
                    display inline-block
                    margin-right 14px
                    margin-bottom -10px
                div:first-child
                  text-align left
                  i
                    background url("/build/img/video-start.png") no-repeat top center
                    background-size 100% 100%
                div:last-child
                  text-align right
                  i
                    background url("/build/img/studio_article.png") no-repeat top center
                    background-size 100% 100%
        .detail-tab-opus
          width: 670px
          display: block
          margin-top 22px
          ul
            li
              border-bottom 0.0275rem solid #dadada
              padding 32px 0 40px
              .tab-opus-contain
