.page-main
    width: 100%
    height 100%
    background-color #f3f3f3
    .special-index-select
        width 100%
        height 100px
        line-height 100px
        background-color #f3f3f3
        text-align center
        position fixed
        z-index 100
        .index-select-top
          font-size 30px
          color #222832
          a
            display inline-block
            width 50%
            text-align center  
            float left
            i
              width 24px
              height 13px
              background url("/build/img/arrowDown.png") no-repeat top center
              background-size 100% 100%
              display inline-block
              margin-left 16px
              margin-bottom 3px
              transform: rotateX(0deg);
              -o-transform: rotateX(0deg);
              -ms-transform: rotateX(0deg);
              -moz-transform: rotateX(0deg);
              -webkit-transform: rotateX(0deg);
            i.fan
              animation:fan 0.5s ease;
              -webkit-animation:fan 0.5s ease;
              transform: rotateX(180deg);
              -o-transform: rotateX(180deg);
              -ms-transform: rotateX(180deg);
              -moz-transform: rotateX(180deg);
              -webkit-transform: rotateX(180deg);
        .index-select-detail
            width 100%
            height 1134px
            top 100px
            left 0
            z-index 50
            display none
            overflow hidden
            background rgba(52,69,89,0.5);
            position absolute
            #regionDetail
                border-top 4px solid #36bac9
                overflow-y scroll
                -webkit-overflow-scrolling: touch;
                word-wrap:break-word; 
                word-break:normal;
                height auto
                width 50%
                height 660px
                line-height 660px
                position absolute
                top 0
                left 0
                border-right 0.0275rem solid #dbdbdb
                li
                    border-bottom 0.0275rem solid #dbdbdb
                    height 110px
                    line-height 110px
                    width 100%
                    font-size 32px
                    color #919dae
                    background-color #f3f3f3
                    overflow:hidden; 
                    text-overflow:ellipsis;
                    display:-webkit-box; 
                    -webkit-box-orient:vertical;
                    -webkit-line-clamp:1; 
                    word-wrap:break-word; 
                    word-break:normal;
                    cursor:pointer;
                    .regionName
                        display block
                        text-align center
                .regionActive
                    background-color #fff
                    color #36bac9
            #areaDetail
                border-top 3px solid #fff
                overflow-y scroll
                -webkit-overflow-scrolling: touch;
                word-wrap:break-word; 
                word-break:normal;
                height auto
                width 50%
                height 660px
                max-height 660px
                position absolute
                top 0
                left 50%
                background-color #fff
                li.areaActive
                    color #36bac9
                li
                    border-bottom 0.0275rem solid #dbdbdb
                    height 110px
                    line-height 110px
                    width 100%
                    font-size 32px
                    color #919dae
                    overflow:hidden; 
                    text-overflow:ellipsis;
                    display:-webkit-box; 
                    -webkit-box-orient:vertical;
                    -webkit-line-clamp:1; 
                    word-wrap:break-word; 
                    word-break:normal;
                    cursor:pointer;
            .areaDetail2,.areaDetail3,.areaDetail4,.areaDetail5,.areaDetail6,.areaDetail7,.areaDetail8
                display none
            .disHidden
                height 100%
                width 100%
                display block
            #departmentDetail
                border-top 4px solid #36bac9
                overflow-y scroll
                -webkit-overflow-scrolling: touch;
                word-wrap:break-word; 
                word-break:normal;
                height auto
                width 100%
                height 660px
                line-height 660px
                position absolute
                top 0
                left 0
                border-right 0.0275rem solid #dbdbdb
                li
                    border-bottom 0.0275rem solid #dbdbdb
                    height 110px
                    line-height 110px
                    width 100%
                    font-size 32px
                    color #919dae
                    background-color #f3f3f3
                    text-align center
                    overflow:hidden; 
                    text-overflow:ellipsis;
                    display:-webkit-box; 
                    -webkit-box-orient:vertical;
                    -webkit-line-clamp:1; 
                    word-wrap:break-word; 
                    word-break:normal;
                    cursor:pointer;
                .departActive
                    background-color #fff
                    color #36bac9
    .service-member
        height: 100%
        padding-top 120px
        padding-left 40px
        background-color: #ffffff
        .member-container
            height: 100%;
            overflow-y: scroll;
            -webkit-overflow-scrolling: touch;
            .member-item
                display: inherit;
                position relative
                .member-header
                    position absolute
                    display: inline-block
                    width: 150px
                    height: 150px
                    border-radius: 50%
                    background-position: center
                    top 50%
                    margin-top -75px
                .member-main
                    width: 70%;
                    border-bottom .0277rem solid #dbdbdb
                    padding 36px 0
                    margin-left 30% !important
                    display block
                    padding-right 40px
                    .name
                        font-size: 32px
                        color: #344559
                        max-width 210px
                    .flag
                        display: inline-block
                        line-height: 40px;
                        .item
                            display: inline-block;
                            text-align: center
                            font-size: 24px
                            width: 36px
                            height: 36px
                            line-height: 36px;
                            border-radius 50%
                            color: #ffffff
                            margin-right: 5px
                        .art
                            background-color: #36bac9
                        .teacg
                            background-color: #679bea
                        .examine
                            background-color: #f6b252
                        .zhuan
                            background-color: #f0728a
                        .tuan
                            background-color: #84b81e
                    .position-item
                        display: inline-block
                        padding: 1px 20px
                        border: 0.0277rem solid #fb699d
                        border-radius: 30px
                        font-size: 26px
                        color: #fb699d
                        float: right
                    .hospital
                        font-size: 26px
                        color: #919dae
                    .gootat
                        font-size: 28px
                        color: #919dae 
                        word-wrap:break-word; 
                        word-break:normal;
        .special-empty
          margin 15% 20% 15% 15%
          text-align center
          display none
          .emptyImg
            width 67px
            height 69px
            margin 0 auto 28px
          p
            font-size 30px
            color #c0c6d0