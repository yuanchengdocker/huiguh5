.college-page
    background-color: #f3f3f3
    .banner-container
        width: 100%
        height 350px
        background-image: url('/build/img/img.png')
        background-size: 100% 100%
    .college-channels
        width: 100%
        background-color: #ffffff
        padding: 20px 0
        .channel-item
            width: 32%
            margin: 20px 0
            display: inline-block;
            text-align: center;
            font-size: 30px
            color: #344559
            img
                width: 100px
                height 100px
                border-radius: 50%
                display: block;
                margin: 0 auto 10px;

    .channel-container
        margin-bottom: 20px
        .college-content
            width: 100%
            .content-item
                margin-top: 20px
                background-color: #ffffff
                text-align: center
                padding: 0 40px
                .item-header
                    display: inline-block;
                    margin: 40px 0
                    font-size: 30px
                    color: #919dae
                .item-footer
                    display: inline-block
                    margin-bottom: 23px
                    font-size: 26px
                    color: #36bac9

.empty
    display block !important
    padding-top: 0 !important
    margin-bottom: 0 !important
