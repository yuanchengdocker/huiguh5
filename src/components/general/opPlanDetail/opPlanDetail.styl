.op-plan-detail-page
    .op-plan-header
        position: relative
        width: 100%
        height: 336px
        color: #ffffff
        margin-top: 100px
        img
            position: absolute
            width: 100%
            height: 100%
        .left-flag
            position: absolute
            top: 30px
            left 30px
            padding: 6px 20px
            background-color:rgba(61,184,208,0.8)
            border-radius: 18px 18px
            font-size: 24px
        .right-flag
            position: absolute
            top: 30px
            right 30px
            padding: 6px 20px
            background-color: rgba(87,135,205,0.8)
            border-radius: 18px 18px
            font-size: 24px
        .op-plan-price
            width: 100%;
            height: 70px;
            line-height: 70px
            bottom: 0px;
            position: absolute;
            background-color: rgba(0,0,0,0.5)
            padding: 0 30px;
            display: flex
            justify-content: space-between
            font-size: 28px
            .price
                position absolute
                right 20px
    .op-plan-body
        padding-bottom: 142px
        .op-plan-title
            font-size: 32px
            color: #344559
        .op-plan-address
            font-size: 26px
            color: #919dae
            img
                width: 30px
                height: 30px
        .op-plan-doctor
            justify-content: space-between;
            margin: 70px 0;
            position relative;
            .docker-header
                float: left
                display: inline-block
                width: 90px
                height: 90px
                border-radius: 50%
                background-position: center
            .doctor-main
                float: left
                width: 80%;
                .name
                    font-size: 36px
                    color: #344559
                .page
                    font-size: 24px
                    padding: 8px 28px
                    border-radius: 20px
                    color: #ffffff
                    background-color: #36bac9
                .hospital
                    font-size: 26px
                    color: #919dae
            .page-flag
                display: inline-block
                float: right
                width: 20px
                height: 38px
                position: absolute;
                right 0;
                top: 20px;
        .service
            margin-bottom 70px
            .title
                font-size: 30px
                color: #344559
                margin-bottom: 40px
                .title-flag
                    height: 30px
                    border-left: 4px solid #36bac9
                    margin-right: 20px
            .content
                font-size: 30px
                color: #919dae
        .service-counsel
            .service-phone
                color: #36bac9
    .detail-submit
            width: 100%
            height: 100px
            line-height: 100px;
            position: fixed
            bottom: 0;
            font-size: 30px
            color: #ffffff
            text-align: center
            background-color: #2bb0bd
            span
                font-size: 30px
        .disable-submit
            background-color: #919dae
            cursor: none
