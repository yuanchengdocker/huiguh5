.course-page
    position: relative
    .course-video
        width: 100%
        height: 18em;
        video
            height: 18em
        .pay-container
            width: 100%;
            height: 100%
            background-color: #4e5e75;
            color: #ffffff;
            .title
                font-size: 30px
                text-align: center
            .price
                font-size: 36px
                color: #2ac5db
                text-align: center
            .pay-link
                width: 200px
                height: 70px
                display: block
                background-color: #36bac9
                font-size: 30px
                margin: 0 auto
                text-align: center
                line-height: 70px
                margin-top: 20px
    .course-tab
        margin: 10px auto;
        .course-tab-container
            position: relative
            margin: 0 auto;
            width: 230px
            display: flex
            justify-content: space-between
            .course-tab-item
                font-size: 30px
                color: #344559
                padding: 20px 0;
            .active-flag
                position: absolute
                width: 60px
                border-bottom: 4px solid #5fd3e4
                bottom: 0;
                left: 0;
                animation: left 0px
            .tab-turn-right {
                left: 170px;
                animation: tabRight 0.3s ease;
                -webkit-animation: tabRight 0.3s ease;
            }
            .tab-turn-left {
                left: 0;
                animation: tabLeft 0.3s ease;
                -webkit-animation: tabLeft 0.3s ease;
            }
    .course-list
        display block
        position relative
        width: 100%
        overflow:hidden;
        height: 60%;
        .course-container
            width: 200%;
            height: 100%
            transition: margin-left 300ms ease;
            -moz-transition:margin-left 300ms ease;
            -webkit-transition:margin-left 300ms ease;
            -o-transition:margin-left 300ms ease;
            .course-item-page
                width: 50%;
                height: 100%
                float: left;
            .course-detail
                padding: 18px
                height: 100%
                overflow-y: scroll;
                -webkit-overflow-scrolling: touch;
                .series-title
                    font-size: 30px
                    color: #344559
                .swiper-container
                    padding: 20px 0 
                    .series-item
                        display inline-block
                        width: 33.34%
                        height: 145px 
                        padding-right: 10px
                        .cover
                            position: relative
                            width: 97%
                            height: 100%
                            img
                                position: absolute
                                top: 0
                                width: 100%
                                height: 100%
                            .content
                                width: 100%
                                height: 100%
                                position: relative
                                background-color: rgba(0,0,0,0.5)
                                color: #ffffff
                                overflow: hidden
                                .num
                                    display: inline-block
                                    width: 100%
                                    top: 40px
                                    font-size: 30px
                                    text-align: center;
                                .title
                                    font-size: 24px
                                    top: 80px
                                    width: 100%
                                    text-align: center
                                .video
                                    display: none
                                    width: 50px
                                    height: 50px
                                    margin: 0 auto;
                                    background-image: url('../../../img/video.png')
                                    background-size: 100%
                                .advance
                                    position: absolute
                                    right: -30px
                                    top: 10px
                                    width: 100px
                                    font-size: 24px
                                    text-align: center
                                    color: #ffffff
                                    background-color: #36bac9
                                    -moz-transform:rotate(45deg);
                                    -webkit-transform:rotate(45deg);
                                    -o-transform:rotate(45deg);
                                    transform:rotate(45deg); 

                    .series-active
                        position: relative
                        .cover
                            border: 4px solid #36bac9
                            .title
                                display: none !important
                            .video
                                display: block !important
                    .series-active:after
                        content:' '
                        position: absolute
                        bottom -10px
                        left: 50%
                        margin-left: -15px
                        display: inline-block
                        width: 20px
                        border-top: 10px solid #36bac9
                        border-left: 10px solid transparent
                        border-right: 10px solid transparent
                .swiper-container,.swiper-container:hover,.swiper-container:active,.swiper-container:visited,.swiper-container:link,.swiper-container:focus
                    -webkit-tap-highlight-color: transparent;
                    -webkit-tap-highlight-color: rgba(0,0,0,0);
                    outline:none;
                    background: none;
                    text-decoration: none;
                .course-detail-list
                    width: 100%
                    margin: 20px 0;
                    border-bottom: 0.0275rem solid #e0e0e0
                    .detail-list-container
                        .course-item
                            margin-bottom: 20px
                            display: flex
                            justify-content: space-between
                            .item-title
                                font-size: 28px
                                color: #344559
                                width: 84%
                                .video-flag
                                    display: inline-block;
                                    width: 60px
                                    height: 50px
                                    background-image: url('../../../img/video-start.png')
                                    background-repeat: no-repeat;
                                    background-size: 50px 50px
                                    margin-right: 20px
                                    float left
                                .video-title
                                    width: 100%
                            .item-title-active
                                color: #5fd3e4
                                .video-flag
                                    background-image: url('../../../img/video-stop.png')
                            .video-time-png
                                width: 30px
                                height: 30px  
                                margin-right: 5px
                            .time
                                width: 65px
                .course-communication
                    width: 100%
                    padding:50px 0; 
                    border-bottom: 0.0275rem solid #e0e0e0
                    margin-bottom: 20px
                    display: flex
                    justify-content: space-between
                    font-size: 28px
                    .left
                        .num
                            color:#5fd3e4
                        img
                            width: 50px
                            height: 50px
                            margin-right: 30px
                    .right
                        text-align: right;
                        line-height: 50px
                        color:#5fd3e4

                .course-producer
                    width: 100%
                    .producer-title
                        margin: 20px 0;
                    .producer-detail-container
                        width: 100%
                        .producer-head
                            float: left
                            width: 100px
                            height: 100px
                        .content
                            margin-left: 20px
                            width: 82%
                            float: left
                            .name
                                font-size: 28px
                                color: #5fd3e4
                                margin-right: 20px
                            .hospital
                                font-size: 26px
                                color: #919dae
                            .introduce
                                width: 100%
                                margin: 20px 0;
                                font-size:26px
                                color: #4e5e75 
            .course-comm
                width: 50%
                padding: 18px
                height: 100%
                .course-comm-container
                    height: 100%
                    overflow-x: hidden
                    overflow-y: scroll;
                    -webkit-overflow-scrolling: touch;
                    width: 100%
                    padding-bottom: 30px;
                    .course-comm-item
                        width: 100%
                        margin-bottom: 50px
                        .comm-head
                            float: left
                            width: 90px
                            height: 90px
                            border-radius: 50%
                            background-position: center
                        .comm-content
                            width: 87%
                            float: left
                            .title-container
                                width: 83%;
                                margin-right: 6%;
                                float: left
                                .name
                                    font-size: 30px
                                    color: #5fd3e4
                                .office
                                    font-size: 26px
                                    color: #919dae
                                    padding:0 20px
                            .islike
                                color: #5fd3e4
                                font-size: 24px
                                .like-png
                                    display: inline-block;
                                    margin-right: 0.1rem;
                                    width: 30px
                                    height: 30px
                                    background-image: url('../../../img/give-active.png')
                                    background-repeat: no-repeat;
                                    background-size: 30px 30px
                            .nolike
                                color: #919dae
                                .like-png
                                    background-image: url('../../../img/give.png')
                            .comm-detail
                                font-size: 28px
                                color: #4e5e75
                                margin: 20px 0;
                            .time
                                font-size: 24px
                                color: #c0c6d0
                            .comm-reply-content
                                margin-top: 20px
                                width: 100%
                                padding: 20px
                                background-color: #f3f3f3
                                .item
                                    padding: 10px 0;
                                    .name
                                        font-size: 28px
                                        color: #5fd3e4
                                    .content
                                        font-size: 28px
                                        color: #4e5e75

.course-out-left
    margin-left: -100%
    animation: out-left 0.3s ease;
    -webkit-animation: out-left 0.3s ease;
@keyframes out-left {
  from {
    margin-left: 0;
  }
  to {
    margin-left: -100%
  }
}
@keyframes tabRight {
  from {
    left: 0;
  }
  to {
    left: 170px;
  }
}
@keyframes tabLeft {
  from {
    left: 170px;
  }
  to {
    left: 0;
  }
}
