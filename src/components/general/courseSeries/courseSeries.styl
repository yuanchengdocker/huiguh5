.course-series-page
    .course-series-header
        position: relative
        width: 100%
        height: 320px
        .huigu-header
            position absolute
        .series-header-img
            width: 100%
            height: 100%
        .series-header-content
            width: 100%;
            height: 100%;
            top: 0;
            position: absolute;
            background-color: rgba(0,0,0,0.5)
            .huigu-header
                background-color: transparent 
                .return
                    background: url('/build/img/return-flag.png') no-repeat top center;
                    background-size: 100% 100%;
                .header-tit
                    color: #fff;
                    text-align: center;
                    font-size: 36px
            .series-producer
                position: absolute
                left 0
                bottom: 30px
                width: 100%
                padding: 0 20px
                .producer-header
                    float: left
                    display: inline-block
                    width: 80px
                    height: 80px
                    border-radius: 50%
                    background-image: url('../../../img/comm-head.png')
                    background-position: center
                    margin-right: 20px
                .name
                    font-size: 26px
                    color: #2ac5db
                    display: -webkit-box;
                    -webkit-box-orient: vertical;
                    -webkit-line-clamp: 1;
                    overflow: hidden;
                    width: 85%;
                    float: left;
    .series-content
        width: 100%
        padding: 30px 20px
        .series-introduce
            font-size: 28px
            color: #919dae
        .course-list-title
            font-size: 30px
            color: #344559
            margin: 40px
            text-align: center
        .course-list
            .course-item
                width: 340px
                display: inline-block
                margin: 5px
                .img-container
                    position: relative
                    width: 100%
                    height: 195px
                    img
                        width: 100%
                        height: 100%
                    .img-detail
                        width: 100%;
                        height: 100%;
                        top: 0;
                        position: absolute;
                        background-color: rgba(0,0,0,0.5)
                        color: #ffffff
                        overflow: hidden
                        .img-time
                            position: absolute
                            top: 20px
                            left 20px
                            .time-png
                                width: 30px
                                height: 30px
                                margin-right: 10px
                        .advance
                            position: absolute
                            right: -70px
                            top: 20px
                            width: 200px
                            font-size: 28px
                            text-align: center
                            color: #ffffff
                            background-color: #36bac9
                            -moz-transform:rotate(45deg);
                            -webkit-transform:rotate(45deg);
                            -o-transform:rotate(45deg);
                            transform:rotate(45deg); 
                        .price
                            position: absolute
                            right: 20px
                            bottom: 20px
                .course-title
                    margin: 30px 0;
                    font-size: 28px
                    color: #344559
